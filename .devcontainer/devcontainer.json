{
  "name": "Essential OpenTelemetry (.NET 10)",
  "image": "mcr.microsoft.com/devcontainers/dotnet:1-10.0-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "EditorConfig.EditorConfig",
        "csharpier.csharpier-vscode",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "dotnet.defaultSolution": "Essential.OpenTelemetry.slnx",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "csharpier.csharpier-vscode",
        "[csharp]": {
          "editor.defaultFormatter": "csharpier.csharpier-vscode"
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },

  "postCreateCommand": "dotnet tool restore && dotnet restore Essential.OpenTelemetry.slnx",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.nuget/packages,target=/home/vscode/.nuget/packages,type=bind,consistency=cached"
  ],

  "forwardPorts": []
}
